<Window x:Class="DebugReplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DebugReplicator"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        FontFamily="sans-serif"
        Background="Transparent"
        Height="500" Width="900"
        MinHeight="500" MinWidth="590"
        Closing="CerrarVentana">
    <Window.Resources>
        <Style x:Key="boton_ventana" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource principal_konecta}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource blanco}" />
                    <Setter Property="Background" Value="{StaticResource principal_konecta}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="boton_ventana_cerrar" BasedOn="{StaticResource boton_ventana}" TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource danger_red}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="border_barra_superior_activo" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource blanco}" />
            <Setter Property="CornerRadius" Value="20, 20, 0, 0" />
            <Setter Property="BorderThickness" Value="0,0,0,0.5"/>
            <Setter Property="BorderBrush" Value="{StaticResource principal_konecta}"/>
        </Style>
        <Style x:Key="border_barra_superior_desactivo" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource gris_texto_secundario}" />
            <Setter Property="CornerRadius" Value="20, 20, 0, 0" />
            <Setter Property="BorderThickness" Value="0,0,0,0.5"/>
            <Setter Property="BorderBrush" Value="{StaticResource principal_konecta}"/>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource color_fondo_body}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>


            <!--#region Contenido principal-->
            <Grid Grid.Row="0" Background="#FFF8F8F8" >
                <ScrollViewer x:Name="ScrollView_Principal" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              VerticalContentAlignment="Top" Margin="10">

                    <Grid x:Name="GridContenidoPrincipal">
                        
                    </Grid>
                </ScrollViewer>

                <Grid x:Name="ContenedorLoading" Background="{StaticResource gris_transparente}">
                    <Border  Panel.ZIndex="10" VerticalAlignment="Center" HorizontalAlignment="Center">

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <ProgressBar
                                 IsIndeterminate="True"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="20" Height="20"
                                 Value="0"
                                 Foreground="{StaticResource principal_konecta}">
                                <ProgressBar.LayoutTransform>
                                    <ScaleTransform CenterX="0.8" CenterY="0.8" ScaleX="3" ScaleY="3" />
                                </ProgressBar.LayoutTransform>
                            </ProgressBar>
                            <Label x:Name="lbl_wait" Content="Cargando..."  HorizontalContentAlignment="Center" VerticalAlignment="Center"
                                   FontSize="25" Foreground="{StaticResource principal_konecta}" Background="{x:Null}"/>

                        </StackPanel>
                    </Border>
                    
                </Grid>
            </Grid>
            <!--#endregion-->

            <!--#region Barra inferior-->
            <Grid Grid.Row="1">
                <Border Background="{StaticResource principal_konecta}"  BorderBrush="{StaticResource principal_konecta}">
                    <StackPanel Orientation="Horizontal" Margin="10, 0" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Account" Width="15" Height="15" VerticalAlignment="Center" Foreground="White"/>
                        <Label x:Name="lbl_nombre_usuario" FontSize="14" Foreground="White" VerticalAlignment="Center"/>

                        <materialDesign:PackIcon Kind="Monitor" Width="15" Height="15" VerticalAlignment="Center" Foreground="White"/>
                        <Label x:Name="lbl_informacion_maquina" FontSize="14" Foreground="White"  VerticalAlignment="Center"/>

                        <materialDesign:PackIcon Kind="Calendar" Width="15" Height="15" VerticalAlignment="Center" Foreground="White"/>
                        <Label x:Name="lbl_fecha"   FontSize="14"  Foreground="White"  VerticalAlignment="Center"/>

                        <materialDesign:PackIcon Kind="ApplicationOutline" Width="15" Height="15" VerticalAlignment="Center" Foreground="White"/>
                        <Label x:Name="lbl_vesion_proyecto" FontSize="14" Foreground="White"  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            <!--#endregion-->
        </Grid>
    </Border>
</Window>
